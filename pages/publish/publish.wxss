/**index.wxss**/
page {
  background-color: #f0f0f0;
}

.cm-btn {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  margin: 0 0 0 20rpx;
  color: #999;
}

.cm-btn.active {
  background: #3cafff;
  border-color: #3cafff;
  color: #fff;
}

.group-w {
  background: #fff;
  margin-top: 30rpx;
}

.group-item{
    display: flex;
    flex-direction: row;
    align-items: center;
    position: relative;
    height: 98rpx;
    border-top: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
}
.group-w .group-item:nth-child(n + 2) {
  margin-top: -1rpx;
}

.cm-txt {
  color: #999;
  font-size: 30rpx;
}

.icon-w {
  width: 45rpx;
  height: 45rpx;
  padding: 0 20rpx;
}
.group-icon{
  max-width: 45rpx;
  max-height: 45rpx;
}

.group-label {
  font-size: 30rpx;
  color: #333;
}

.group-op {
  padding-right: 20rpx;
  display:flex;
  flex-direction:row;
  justify-content:flex-end;
  align-items: center;
  flex:1;
}

.list-arrow {
  width: 16rpx;
  height: 28rpx;
  margin-left: 10rpx;
}

.input {
  font-size: 30rpx;
  text-align: right;
  margin-right: 10rpx;
}

.publish-btn {
  width: 100%;
  line-height: 98rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #3cafff;
}